#!/usr/bin/env ruby

require_relative 'lib/ubunbrew'

cmd = ARGV.shift

case cmd
when 'install'
  puts Ubunbrew.install *ARGV
when 'search'
  puts Ubunbrew.search *ARGV
when nil
  Ubunbrew.example_error_message "A command is required"
else
  Ubunbrew.example_error_message "Unknown command \"#{cmd}\""
end

# vim: ft=ruby
